{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node", // Modül çözümleme için "node" ayarı kullanılır.
    "esModuleInterop": true, // ES modül uyumluluğu sağlar.
    "resolveJsonModule": true, // JSON dosyalarını modül olarak import edebilmek için.
    "strict": true,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
